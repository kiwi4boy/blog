<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter, :class => 'input-block-level' %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => 'wysihtml5 input-block-level', rows: 5 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>