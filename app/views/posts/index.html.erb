
<%= link_to 'New post', new_post_path %>
<% @posts.each do |post| %>
<h2><%= post.title %></h2>
<p><%= post.created_at.strftime("%B %d, %Y") %></p>
<%= raw post.text %>

<%= link_to 'Show', post_path(post) %>
<%= link_to 'Edit', edit_post_path(post) %>
<%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>